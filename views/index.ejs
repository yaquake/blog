<!DOCTYPE html>
<html lang="en">
	<%- include('layouts/header') -%>
<body>
	<%- include('layouts/navbar') -%>
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/titles/roskill-1440x1000.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Nice blog</h1>
            <span class="subheading">About everything</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
	  <div class="row">
		  <div class="col-lg-10 col-md-8">	 
		  <form method="POST" action="/" >
		  	
		  		 <input type="text" class="form-control form-control-lg" placeholder="Search" id="search" name="search">
		  </div>	
		  <div class="col-lg-2 col-md-4">
				<button type="submit" class="btn btn-primary" id="searchButton">Search</button>
		  </div>
				  </form>
		  </div>
   
	    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
	      <% for (var i = 0; i < blogposts.length; i++) {%>
	      <div class="post-preview">
		      <a href="/post/<%= blogposts[i]._id%>">
            <h2 class="post-title">
		    <%= blogposts[i].title %>
            </h2>
            <h3 class="post-subtitle">
		    <%= blogposts[i].subheading %>
            </h3>
          </a>
          <p class="post-meta">Posted by
	  <a href="#"><%= blogposts[i].userid.username%></a>
	  on <%= blogposts[i].datePosted.toDateString() %></p>
        </div>
        <hr>
                <hr>
		<%}%>

        <% if (!locals.button) { %>
        <!-- Pager -->
        <div class="clearfix">
          
            <a class="btn btn-primary float-right" href="/older">Older Posts &rarr;</a>

        </div>
        <%}%>
        
          
      </div>
    </div>
  </div>

  <hr>
  <%-include('layouts/footer')-%>
  <%-include('layouts/scripts')-%>

</body>

</html>
