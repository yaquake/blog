<!DOCTYPE html>
<html lang="en">

	<%-include('layouts/header')-%>


<body>


	<%-include('layouts/navbar')-%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('<%= blogposts.image%>')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
		  <h1><%= blogposts.title %></h1>
            <h2 class="subheading">Problems look mighty small from 150 miles up</h2>
            <span class="meta">Posted by
		    <a href="#"><%=blogposts.username%></a>
		    on <%=blogposts.datePosted.toDateString()%></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
		<p><%= blogposts.body%></p>

        </div>
      </div>
    </div>
  </article>

  <hr>

  <%-include('layouts/footer')-%>
  <%-include('layouts/scripts')-%>

</body>

</html>
